<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaSiActivity"
    android:background="@drawable/backgroundcasi">


    <TextView
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin ca sĩ"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloo"
        android:textSize="37sp"
        android:id="@+id/txtThongTinCaSi"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="325dp"
        android:layout_height="325dp"
        android:src="@null"
        android:id="@+id/imgHinhCaSi"
        android:layout_below="@+id/txtThongTinCaSi"/>


    <TextView
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên ca sĩ"
        android:id="@+id/txtCaSiName"
        android:layout_below="@id/imgHinhCaSi"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:textSize="20sp"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        android:id="@+id/txtTieuSu"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Tiểu sử"
        android:layout_below="@+id/txtCaSiName"/>

    <TextView
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Số lượt yêu thích: "
        android:layout_below="@+id/txtTieuSu"
        android:id="@+id/txtSoLuotYeuThich"/>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/unlike1"
        android:id="@+id/imgChualike"
        android:layout_below="@id/imgHinhCaSi"
        android:layout_toLeftOf="@+id/txtCaSiName"
        android:layout_marginRight="55dp"/>







</RelativeLayout>